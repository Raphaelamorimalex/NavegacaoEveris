<?xml version="1.0" encoding="utf-8"?>
<CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/tv_photo"
            app:layout_constraintTop_toTopOf="@+id/tv_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/tv_telephone"
            android:contentDescription="@string/app_name"
            android:layout_width="40dp"
            android:layout_height="40dp">

        </ImageView>

        <TextView
            android:id="@+id/tv_name"
            app:layout_constraintBottom_toTopOf="@+id/tv_photo"
            app:layout_constraintStart_toEndOf="@+id/tv_photo"
            android:layout_marginLeft="16dp"
            android:textColor="@color/black"
            android:textSize = "20sp"
            android:textStyle="bold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_telephone"
            app:layout_constraintBottom_toTopOf="@+id/tv_name"
            app:layout_constraintStart_toEndOf="@+id/tv_name"
            android:layout_marginLeft="16dp"
            android:textSize = "14sp"
            android:textStyle="bold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</CardView>